{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonJS",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
  },
  "include": [
    "**/*.*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
